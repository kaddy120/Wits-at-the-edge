extends groupLayout

block content
    div(class="container")
      h3=title
      if message != '**There are currently no pending join requests.'
          ul(class='list-group')
            - for (var x = 0; x < length; x++)
              li(class="list-group-item" value=requestId)
                strong=`${message[x][0].firstName} ${message[x][0].surname} wants to be a member`
                form(action='#', method='post')
                    input(type='submit' value="Accept" class='btn btn-primary')  
                    |
                    |
                    input(type='hidden' value=`${requestId[x]}` id=`${groupId}`)
                    |
                    |
                    input(type='submit' value="Decline" class='btn btn-light')
      else 
        h4=message

      script(src='/javascript/voted.js')
         